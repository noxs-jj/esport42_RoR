.hidden-xs
  a href=post_show_url(post.id) style="color: inherit; text-decoration: none;"
    div.center-block style="overflow:hidden; border: solid 1px white; color: white; border-radius: 5px; background-image: url(#{post.banner}); background-repeat:no-repeat; min-height: 90xp; height: 90xp; max-width: 728px; background-position:center top;"
      h3 = post.title.truncate(59)
      = post.description.truncate(150)

.visible-xs
  a href=post_show_url(post.id) style="color: inherit; text-decoration: none;"
    div.center-block style="overflow:hidden; min-height: 90xp; height: 90xp; max-height: 90xp; color: white; border-radius: 5px; background-image: url(#{post.banner}); background-position:center center; background-repeat:no-repeat; background-color: black; border: solid 1px white;"
      h3 = post.title.truncate(22)
      = post.description.truncate(56)
